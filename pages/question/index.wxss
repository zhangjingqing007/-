.containers{
  overflow: hidden;
  height: 100vh;
  position: relative;
}

.back{
  background-color: #fff;
  border-radius: 0;
  position: absolute;
  top: 0px;
  left: 0px;
  z-index: 10;
  width: 100%;
  transition: all .5s;
}

.back.hidden{
  margin-top: -100px;
}

.page{
  transition: all .2s ease-in;
  width: calc(100vw * 187);
  display: flex;
}

.question{
  padding: 150px 10px 10px 10px;
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  background-color: rgba(255, 255, 255, .5);
  overflow: hidden;
  box-sizing: border-box;
}

.question .title{
  font-size: 16px;
  margin-bottom: 20px;
}

.question .option{
  font-size: 14px;
  text-align: left;
  margin-bottom: 20px;
  width: 100%;
}